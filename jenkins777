pipeline {
    agent any
    stages {
        stage("checkout the code from Github"){
            steps {
                git url:'https://github.com/iambharathsk/DevOpsClassCodes'
            }
        }
        stage("compile"){
            steps {
                sh "mvn compile"
                echo "compiling done"
            }
        }
        stage("test"){
            steps {
                sh "mvn test"
            }
        }
        stage("qa"){
            steps {
                sh "mvn pmd:pmd"
                recordIssues sourceCodeRetention: 'LAST_BUILD', tools: [pmdParser()]
            }
        }
        stage("package"){
            steps{
                sh "mvn package"
            }
        }
    }
}
